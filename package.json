  "dependencies": {
    "chalk": "^1.0.0",
    "lodash": "^4.6.1",
    "update-notifier": "^0.6.3",
    "xml2js": "^0.4.16",
    "yeoman-generator": "^0.22.5",
    "yosay": "^1.0.2"
  },
  "devDependencies": {
    "commitizen": "^2.7.3",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^2.1.0",
    "eslint-config-xo-space": "^0.10.0",
    "eslint-formatter-pretty": "^0.2.0",
    "ghooks": "^1.0.3",
    "gulp": "^3.9.0",
    "gulp-codecov": "2.0.1",
