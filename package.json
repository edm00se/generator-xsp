  "homepage": "https://github.com/edm00se/generator-xsp",
  "author": {
    "name": "Eric McCormick",
    "email": "edm00se@gmail.com",
    "url": "https://edm00se.io/"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "engines": {
