  "repository": "edm00se/generator-xsp",
  "scripts": {
    "prepublish": "gulp prepublish",
    "test": "gulp",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-cz"
  },
  "license": "MIT"
}
